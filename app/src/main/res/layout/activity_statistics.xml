<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/bg_statistics">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/btn_statistics"
            android:textSize="24dp"
            android:layout_marginBottom="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_time"
            android:textSize="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/average_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_board_size"
            android:textSize="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/average_board_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginBottom="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/average_movements"
            android:textSize="20dp"
            android:layout_marginBottom="5dp" />

        <TextView
            android:id="@+id/average_movements"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13dp"
            android:layout_marginBottom="10dp" />

        <Button
            android:id="@+id/btnSendStatistics"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/btn_send_statistics_bg"
            android:text="@string/btn_send_statistics"
            android:textAllCaps="false"
            android:textColor="@color/btn_send_statistics"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp" />


    </LinearLayout>



</RelativeLayout>
